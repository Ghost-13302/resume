---
// src/components/SkillsSection.astro
const skills = {
  programmingLanguages: [
    "Python",
    "Java",
    "Kotlin",
    "HTML/CSS",
    "JavaScript (ReactJS)",
    "Solidity",
    "Angular",
  ],
  toolsAndFrameworks: [
    "Android Studio",
    "Jetpack Compose",
    "TensorFlow",
    "Pandas",
    "NumPy",
    "BeautifulSoup",
    "Scrapy",
    "OpenStreetMap API",
    "Git/GitHub",
    "Gradle",
    "SQLite",
  ],
};
---

<section id="skills" class="py-16 md:py-20 bg-[var(--gray-900)]">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-[var(--emerald-400)] mb-12 text-center">
      Technical Skills
    </h2>
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h3
          class="text-xl font-semibold text-[var(--gray-200)] mb-4 text-center">
          Programming Languages:
        </h3>
        <div class="flex flex-wrap gap-3 justify-center">
          {
            skills.programmingLanguages.map((lang) => (
              <span class="inline-block bg-[var(--emerald-700)]/50 text-[var(--emerald-300)] text-xs font-semibold mr-2 mb-2 px-3 py-1 rounded-full">
                {lang}
              </span>
            ))
          }
        </div>
      </div>
      <div>
        <h3
          class="text-xl font-semibold text-[var(--gray-200)] mb-4 text-center">
          Tools & Frameworks:
        </h3>
        <div class="flex flex-wrap gap-3 justify-center">
          {
            skills.toolsAndFrameworks.map((tool) => (
              <span class="inline-block bg-[var(--emerald-700)]/50 text-[var(--emerald-300)] text-xs font-semibold mr-2 mb-2 px-3 py-1 rounded-full">
                {tool}
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
