---
// src/components/EducationSection.astro
const education = [
  {
    degree: "Master of Science in Computer Science",
    institution: "University of Florida, Gainesville, FL",
    period: "Aug 2023 - May 2025 (Expected)",
    gpa: "GPA: 3.83/4.00",
  },
  {
    degree: "Bachelor of Technology in Computer Science",
    institution: "MIT-WPU University, Maharashtra, India",
    period: "Aug 2019 - May 2023",
    gpa: "CGPA: 9.58/10.00",
  },
];
const researchPaper = {
  title: "Malware Analysis Using Machine Learning Techniques",
  authors: "S. Kinger, B. V. Reddy, S. Jadhao, K. Hambarde, A. Hullur",
  conference:
    "2022 2nd International Conference on Intelligent Technologies (CONIT), Hubli, India, 2022.",
  link: "https://ieeexplore.ieee.org/document/9848045",
};
---

<section id="education" class="py-16 md:py-20 bg-[var(--gray-800)]/50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-[var(--emerald-400)] mb-12 text-center">
      Education & Research
    </h2>
    <div class="space-y-8 max-w-3xl mx-auto mb-12">
      {
        education.map((edu) => (
          <div class="bg-[var(--gray-800)] p-6 rounded-xl shadow-lg hover:shadow-[var(--emerald-500)]/20 transition-shadow duration-300">
            <h3 class="text-xl font-semibold text-[var(--gray-100)]">
              {edu.degree}
            </h3>
            <p class="text-md text-[var(--gray-300)]">{edu.institution}</p>
            <p class="text-sm text-[var(--gray-400)]">{edu.period}</p>
            <p class="text-sm text-[var(--gray-400)]">{edu.gpa}</p>
          </div>
        ))
      }
    </div>
    <div
      class="max-w-3xl mx-auto bg-[var(--gray-800)] p-6 rounded-xl shadow-lg hover:shadow-[var(--emerald-500)]/20 transition-shadow duration-300">
      <h3 class="text-xl font-semibold text-[var(--gray-100)] mb-1">
        Research Paper
      </h3>
      <h4 class="text-lg font-medium text-[var(--gray-200)]">
        {researchPaper.title}
      </h4>
      <p class="text-sm text-[var(--gray-300)] italic mt-1">
        {researchPaper.authors}
      </p>
      <p class="text-sm text-[var(--gray-400)] mt-1">
        {researchPaper.conference}
      </p>
      {
        researchPaper.link && (
          <a
            href={researchPaper.link}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block mt-2 text-[var(--emerald-400)] hover:text-[var(--emerald-300)] hover:underline text-sm font-medium">
            View on IEEE Xplore
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="inline-block w-4 h-4 ml-0.5">
              <path
                fill-rule="evenodd"
                d="M4.25 5.5a.75.75 0 000 1.5h5.5a.75.75 0 000-1.5h-5.5zm0 3a.75.75 0 000 1.5h3.5a.75.75 0 000-1.5h-3.5zm0 3a.75.75 0 000 1.5h3.5a.75.75 0 000-1.5h-3.5zM12.923 5.173a.75.75 0 01.023 1.06L10.22 10l2.725 3.768a.75.75 0 11-1.087.986l-3.25-4.5a.75.75 0 010-.986l3.25-4.5a.75.75 0 011.06-.023z"
                clip-rule="evenodd"
              />
            </svg>
          </a>
        )
      }
    </div>
  </div>
</section>
