---
// src/components/Header.astro
const navItems = [
  {
    href: "#hero",
    label: "Home",
    iconSvgPath:
      "M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6",
  },
  {
    href: "#about",
    label: "About",
    iconSvgPath:
      "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
  },
  {
    href: "#experience",
    label: "Experience",
    iconSvgPath:
      "M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
  },
  {
    href: "#projects",
    label: "Projects",
    iconSvgPath:
      "M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10",
  },
  {
    href: "#skills",
    label: "Skills",
    iconSvgPath:
      "M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z",
  },
  {
    href: "#education",
    label: "Education",
    iconSvgPath:
      "M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222",
  },
  {
    href: "#contact",
    label: "Contact",
    iconSvgPath:
      "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
  },
];
---

<header
  class="bg-[var(--gray-900)]/70 backdrop-blur-md shadow-lg sticky top-0 z-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center">
        <a href="#hero" class="text-2xl font-bold text-[var(--emerald-400)]"
          >Sanket Jadhao</a
        >
      </div>
      <nav class="hidden md:flex items-center space-x-2">
        {/* Adjusted spacing for icons */}
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="relative flex items-center justify-center p-3 rounded-full text-[var(--gray-400)] hover:bg-[var(--gray-700)] hover:text-[var(--emerald-300)] transition-all duration-200"
              aria-label={item.label}>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d={item.iconSvgPath}
                />
              </svg>
              <span class="absolute -top-10 left-1/2 -translate-x-1/2 whitespace-nowrap bg-[var(--gray-700)] text-[var(--emerald-300)] text-xs px-2.5 py-1 rounded-md shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none">
                {item.label}
              </span>
            </a>
          ))
        }
      </nav>
      <div class="md:hidden">
        <button
          id="mobile-menu-button"
          class="text-[var(--gray-300)] hover:text-[var(--emerald-400)] focus:outline-none p-2 rounded-md"
          aria-controls="mobile-menu"
          aria-expanded="false"
          aria-label="Toggle mobile menu">
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
  <div
    id="mobile-menu"
    class="md:hidden hidden bg-[var(--gray-800)] shadow-lg border-t border-[var(--gray-700)]">
    <nav class="flex flex-col space-y-1 px-2 pt-2 pb-3">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="block px-3 py-3 rounded-md text-base font-medium text-[var(--gray-200)] hover:bg-[var(--gray-700)] hover:text-[var(--emerald-300)] transition-colors">
            {item.label}
          </a>
        ))
      }
    </nav>
  </div>
</header>
