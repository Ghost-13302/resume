---
// src/components/ContactSection.astro
const contactInfo = {
  email: "sanketjadhao2002@gmail.com",
  phone: "(352) 709-0771",
  linkedinUrl: "https://www.linkedin.com/in/sanket-jadhao/",
  tagline:
    "I'm actively seeking new opportunities and collaborations. If you have an interesting project or just want to connect, please don't hesitate to reach out!",
};
---

<section id="contact" class="py-16 md:py-24 bg-[var(--emerald-700)] text-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl font-bold mb-6 text-white">Get In Touch</h2>
    <p class="text-lg text-[var(--emerald-100)] mb-10 max-w-xl mx-auto">
      {contactInfo.tagline}
    </p>
    <div
      class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-6">
      <a
        href={`mailto:${contactInfo.email}`}
        class="rounded-lg font-semibold transition-all duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-[var(--emerald-400)] focus:ring-opacity-50 active:scale-95 transform hover:scale-105 bg-white text-[var(--emerald-700)] hover:bg-[var(--emerald-100)]/90 px-8 py-3 text-lg shadow-xl hover:shadow-2xl">
        Email Me
      </a>
      <a
        href={contactInfo.linkedinUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="text-[var(--emerald-100)] hover:text-white underline text-lg font-medium">
        LinkedIn Profile
      </a>
    </div>
    <p class="text-[var(--emerald-100)] text-md mt-8">
      Phone: {contactInfo.phone}
    </p>
  </div>
</section>
