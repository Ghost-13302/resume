---
// src/components/AboutSection.astro
const aboutText =
  "I am a Computer Science graduate student at the University of Florida, deeply interested in software development, with hands-on experience in blockchain technologies and machine learning applications. I'm eager to contribute to innovative projects and continuously expand my technical horizons.";
const resumeFileName = "Sanket_Jadhao_Resume.pdf";
---

<section id="about" class="py-16 md:py-24 bg-[var(--gray-800)]/50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-4xl font-bold text-[var(--emerald-400)] mb-12 text-center">
      About Me
    </h2>
    <p
      class="text-xl text-[var(--gray-300)] mb-8 max-w-3xl mx-auto leading-relaxed">
      {aboutText}
    </p>
    <div
      class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-4">
      <a
        href="#contact"
        class="px-6 py-3 rounded-lg font-semibold shadow-md transition-all duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-[var(--emerald-400)] focus:ring-opacity-50 bg-[var(--emerald-600)] text-white hover:bg-[var(--emerald-500)] active:scale-95 transform hover:scale-105 w-full sm:w-auto"
        >Get in Touch</a
      >
      <a
        href={`/${resumeFileName}`}
        target="_blank"
        rel="noopener noreferrer"
        class="px-6 py-3 rounded-lg font-semibold shadow-md transition-all duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-[var(--emerald-400)] focus:ring-opacity-50 bg-[var(--gray-700)] text-[var(--gray-200)] hover:bg-[var(--gray-600)] active:scale-95 transform hover:scale-105 w-full sm:w-auto"
        >View Resume (PDF)</a
      >
    </div>
  </div>
</section>
